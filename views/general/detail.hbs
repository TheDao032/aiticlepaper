<div class="post-details-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-12">
                <div id="details" class="post-details-content bg-white mb-30 mt-30 p-30 ">
                    {{#if this.isDownload}}
                        <div class="download-pdf">
                            <a href="javascript:Printf()" class="btn-download-pdf" id="btn-download-pdf">
                                <i class="far fa-lg fa-file-pdf"></i>
                                <span>Download pdf</span>
                            </a>
                        </div>
                    {{/if}}     
                    <div class="blog-content">
                        <div class="post-details-area">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-12 col-xl-12">
                                        <div id="details" class="post-details-content bg-white mb-30 mt-30 p-30 ">
                                            <div class="blog-content" id="blog-content">
                                                <div class="post-meta">
                                                    {{#if lcIsAuthenticated}}
                                                    <input id="idAcc" type="hidden" value="{{lcAuthUser.id}}"></input>
                                                    {{/if}}
                                                    {{#if this.empty}}
                                                    {{else}}
                                                    <a href="#">{{this.listArtbyID.rT}}</a>
                                                    <a href="/ListArt/{{this.listArtbyID.idCat}}">{{this.listArtbyID.catName}}</a>
                                                </div>
                                                <h4 class="post-title">{{this.listArtbyID.title}}</h4>
                                                <div>
                                                    {{#if this.isView}}
                                                    {{{this.listArtbyID.content}}}
                                                    <div class="post-meta">
                                                        {{#each this.tagList}}
                                                        <a href="/search/tag/{{id}}">{{name}}</a>
                                                        {{/each}}
                                                    </div>
                                                    {{else}}
                                                    Hãy đăng ký trở thành thành viên vip để đọc bài viết nhé!
                                                    {{/if}}
                    
                                                </div>
                                            </div>
                                        </div>
                                        {{/if}} 
                                        <div id="details" class="related-post-area bg-white mb-30 px-30 pt-30 box-shadow">
                                            <div class="section-heading">
                                                <h5>Bài Viết Liên Quan</h5>
                                            </div>
                                            <div class="row">
                                                {{#if this.empty}}
                                                {{else}}
                                                {{#each this.listAnotherArt}}
                                                <div class="col-12 col-md-6 col-lg-4">
                                                    <div class="single-blog-post style-4 mb-30">
                                                        <div class="post-thumbnail" style="width: 100%;">
                                                            <img src="{{image}}" alt="">
                                                        </div>
                                                        <div class="post-content">
                                                            <a href="/byID/{{id}}" class="post-title">{{title}}</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{/each}}
                                                {{/if}}
                                            </div>
                                        </div>
                                        <div class="comment_area clearfix bg-white mb-30 box-shadow">
                                            <div class="section-heading">
                                                <h5>Bình Luận</h5>
                                            </div>
                                            <ol>
                                                {{#if this.empty_listCmt}}
                                                {{else}}
                                                {{#each this.listCmt}}
                                                <li class="single_comment_area">
                    
                                                    <div class="comment-content d-flex">
                    
                                                        <div class="comment-author">
                                                            <img src="/public/images/articleAvatar-img/user.jpg">
                                                        </div>
                    
                                                        <div class="comment-meta">
                    
                                                            <a href="#" class="comment-date">{{dt}}</a>
                                                            <h6>{{username}}</h6>
                                                            <p>{{content}}</p>
                                                        </div>
                                                    </div>
                                                </li>
                                                {{/each}}
                                                {{/if}}
                                            </ol>
                                        </div>
                                        <div id="details" class="post-a-comment-area bg-white mb-30 p-30 box-shadow clearfix">
                                            <!-- Section Title -->
                                            <div class="section-heading">
                                                <h5>Đăng Bình Luận</h5>
                                            </div>
                    
                                            <div class="contact-form-area">
                                                <form action="/ByID/{{this.listArtbyID.id}}" method="post" id="cmtForm">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <textarea name="message" class="form-control" id="message" cols="30" rows="10"
                                                                placeholder="Hãy bình luận ở đây" required></textarea>
                                                        </div>
                                                        <div class="col-12">
                                                            <button id="cmtButton" class="btn mag-btn mt-30" {{#if this.isView}} {{else}}
                                                                disabled {{/if}} type="submit">Đăng bình luận</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>