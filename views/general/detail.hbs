<script>
    function Printf() {
        var printContents = document.getElementById(`blog-content`).innerHTML;

        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>
<script>
    $('#message').click(function () {
        var IDCurrent = $('#idAcc').val()
        if (!IDCurrent)
            window.location = "http://localhost:3000/account/login";
    });



    $('#cmtForm').on('submit', async function (e) {
        e.preventDefault()
        var IDCurrent = $('#idAcc').val()
        if (IDCurrent)
            $('#cmtForm').off('submit').submit();
        else
            window.location = "http://localhost:3000/account/login";
    })

</script>
