<div class="backward">
    <a href="/" title="Quay lại">
        <!--        <i class="fas fa-camera"></i>-->
        <i class="fa fa-arrow-left"></i>
    </a>
</div>
<div class="container-login" id="elegantModalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content form-elegant">
            <!--Header-->
            <div class="modal-header text-center">
                {{!-- <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="myModalLabel"><strong>ĐĂNG NHẬP</strong></h3> --}}
                <img src="/public/images/core-img/logo4.png" class="logo-img" alt="">
                {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button> --}}
            </div>
            <!--Body-->
            <div class="modal-body mx-4">
                <input id="js-message-signIn" disabled type="hidden" class=" validate">

                <input type="hidden" value="{{this.message}}" id="message">

                <form method="POST" id="frmLogin" action="">
                    <div class="md-form mb-4 txtUser">
                        <input type="text" name="username" id="usernameLI" class="validate">
                        <span data-error="wrong" data-success="right" for="Form-username"
                            data-placeholder="Username"></span>
                        {{!-- <input id="js-message-username" disabled type="hidden"> --}}
                    </div>

                    <div class="md-form mb-4 txtPassword">
                        <input type="password" id="passwordLI" name="password" class="validate">
                        <span data-error="wrong" data-success="right" for="Form-pass1"
                            data-placeholder="Password"></span>
                        {{!-- <input id="js-message-password" disabled type="hidden"> --}}
                    </div>


                    <div class="text-center mb-3 bnt-login">
                        <button type="submit" class="btn blue-gradient  btn-block z-depth-1a" id="a">Đăng nhập</button>
                    </div>
                </form>
                <p class="dark-grey-text text-right d-flex justify-content-center mb-3 pt-2 "> hoặc đăng nhập với: </p>

                <div class="row my-3 d-flex justify-content-center">
                    <a href="/account/facebook" class="btn btn-white btn-rounded fb-btn mr-md-3 z-depth-1a"><i
                            class="fab fa-facebook-f text-center"></i></a>
                    <!--Google +-->
                    <a href="/account/google" class="btn btn-white btn-rounded gg-btn z-depth-1a"><i
                            class="fab fa-google-plus-g"></i></a>
                </div>
                <div class="font-small">
                    <p class="font-small d-flex justify-content-end">Quên<a href="/account/forgotPassword"
                            class="blue-text ml-1">
                            mật khẩu?</a></p>

                    <p class="font-small grey-text d-flex justify-content-end">Bạn chưa có tài khoản? <a
                            href="/account/register" class="blue-text ml-1">Đăng ký</a></p>
                </div>

            </div>
            <!--Footer-->
            {{!-- <div class="modal-footer mx-5  mb-1">
                <p class="font-small grey-text d-flex justify-content-end">Bạn chưa có tài khoản? <a href="/account/register"
                        class="blue-text ml-1">Đăng ký</a></p>
            </div> --}}
        </div>
    </div>
</div>

