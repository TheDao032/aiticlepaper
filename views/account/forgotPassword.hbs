</div>
<div id="elegantModalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content form-elegant">
            <!--Header-->
            <div class="modal-header text-center">
                <!--                <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="myModalLabel"><strong>Bạn quên mật khẩu?</strong></h3>-->
                <img src="/public/images/core-img/logo-3.png" alt="" class="logo-forgot">
                <!--                <label>Nhập tên đăng nhập để tìm lại mật khẩu</label>-->
            </div>
            <!--Body-->
            <div class="modal-body mx-4">
                <input id="js-message-forgotPassword" disabled type="hidden" class="form-control validate">
                <form method="POST" id="frmForgotPassword" action="">
                    <div class="md-form mb-4 txtUserForgot">
                        <input type="text" name="username" id="usernameLI" class="validate">
                        <span data-error="wrong" data-success="right" for="Form-username"
                            data-placeholder="Username"></span>
                    </div>


                    <input id="js-message-username" class="alert-danger alert" disabled type="hidden">

                    <div class="text-center mb-3">
                        <button type="submit" class="btn blue-gradient  btn-block z-depth-1a" id="a">Tiếp tục</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>